<li class="chat-item">
  <div class="flex-markup chat-item__wrapper">
    <img class="chat-item__avatar" src="{{#if avatar}} {{avatar}} {{else}} "" {{/if}}" alt="" />

    <div class="chat-item__message-wrapper">
      <h3>{{name}}</h3>
      <p class="chat-item__message">{{message}}</p>
    </div>

    <div class="chat-item__common-info-wrapper">
      <span class="chat-item__time">{{time}}</span>
      {{#if count}}
      <div class="chat-item__counter">
        <span class="chat-item__counter-text">
          {{count}}
        </span>
      </div>
      {{/if}}
    </div>
  </div>
</li>